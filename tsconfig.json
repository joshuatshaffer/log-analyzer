{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "sourceMap": true,

    "paths": {
      "@src/*": ["./src/*"]
    },

    "jsx": "react-jsx",
    "jsxImportSource": "@src/jsx",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true
  }
}
